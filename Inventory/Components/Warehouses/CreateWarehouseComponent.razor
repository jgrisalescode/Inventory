@using Entities
@using Business

<!--Inyección de dependencias / Injectando un objeto del tipo NaivationManager-->
@inject NavigationManager NavManager

    <EditForm Model="newWarehouse">
        <div class="form-group">
            <label>Nombre: </label>
            <InputText @bind-Value="newWarehouse.WarehouseName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Dirección: </label>
            <InputText @bind-Value="newWarehouse.WarehouseAddress" class="form-control" />
        </div>
        <input type="button" value="Crear bodega" @onclick="SaveWarehouse" class="btn btn-primary" />
    </EditForm>

@code {
    WarehouseEntity newWarehouse = new WarehouseEntity();
    private void SaveWarehouse()
    {
        newWarehouse.WarehouseId = Guid.NewGuid().ToString();
        B_Warehouse.CreateWarehouse(newWarehouse);
        NavManager.NavigateTo("/warehouse/list");
    }
}
